                <!-- /.card -->
            </div>
            <script>
                // Your delay in milliseconds
                var delay = 8000;
                setTimeout(function () { document.getElementById("CreateBtn").click(); }, delay);
            </script>
        }

        @if (ViewBag.ConfirmEmail == true)
        {
            <div class="col-md-12">
                <div class="card bg-success-gradient">
                    <div class="card-header">
                        <h3 class="card-title"> ثبت نام  موفقیت  </h3>

                        <div class="card-tools">
                            <button type="button" id="CreateBtn" class="btn btn-tool" data-widget="remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>


                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        ثبت نام اولیه با موفقیت انجام شده است .
                        حساب کاربری شما فعال گردیده است

                    </div>
                    <!-- /.card-body -->
