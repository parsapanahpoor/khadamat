@model List<Models.Entities.Works.JobCategory>

@{
    ViewData["Title"] = " خانه ";
}

<div class="content-wrapper" style="min-height: 963.763px;">
    <div class="content-header">

        @if (ViewBag.Create == true)
        {
            <div class="col-md-12">
                <div class="card bg-warning-gradient">
                    <div class="card-header">
                        <h3 class="card-title"> ثبت با موفقیت </h3>

                        <div class="card-tools">
                            <button type="button" id="CreateBtn" class="btn btn-tool" data-widget="remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        ثبت کاربر   جدید   با موفقیت انجام شده است
                        جهت فعال سازی بر روی لینک ارسال شده کلیک کنید
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <script>
                // Your delay in milliseconds
                var delay = 8000;
                setTimeout(function () { document.getElementById("CreateBtn").click(); }, delay);
            </script>
        }

        @if (ViewBag.Login == true)
        {
            <div class="col-md-12">
                <div class="card bg-info-gradient">
                    <div class="card-header">
                        <h3 class="card-title"> ورود  با موفقیت </h3>

                        <div class="card-tools">
                            <button type="button" id="CreateBtn" class="btn btn-tool" data-widget="remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>


                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        ورود @User.Identity.Name با موفقیت انجام شده است
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <script>
                // Your delay in milliseconds
                var delay = 8000;
                setTimeout(function () { document.getElementById("CreateBtn").click(); }, delay);
            </script>
        }
        @if (ViewBag.AddReservation == true)
        {
            <div class="col-md-12">
                <div class="card bg-info-gradient">
                    <div class="card-header">
                        <h3 class="card-title"> ثبت با موفقیت   </h3>

                        <div class="card-tools">
                            <button type="button" id="CreateBtn" class="btn btn-tool" data-widget="remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>


                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        ثبت خدمت با موفقیت انجام شده است 
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <script>
                // Your delay in milliseconds
                var delay = 8000;
                setTimeout(function () { document.getElementById("CreateBtn").click(); }, delay);
            </script>
        }

        @if (ViewBag.EmployeeRegister == true)
        {
            <div class="col-md-12">
                <div class="card bg-warning-gradient">
                    <div class="card-header">
                        <h3 class="card-title"> ثبت نام اولیه با موفقیت  </h3>

                        <div class="card-tools">
                            <button type="button" id="CreateBtn" class="btn btn-tool" data-widget="remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>


                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        ثبت نام خدمت رسان در اولین مرحله با موفقیت انجام شده است  .
                        ایمیلی جهت فعال سازی حساب کاربری شما برایتان ارسال شده است .
                    </div>
                    <!-- /.card-body -->
