@model Models.Entities.User.User
@{

    ViewData["Title"] = "فراموشی رمز عبور ";
    Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>فراموشی رمز عبور  </title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="/Admin_Panel/plugins/font-awesome/css/font-awesome.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Admin_Panel/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    @*<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">*@

    <!-- bootstrap rtl -->
    <link rel="stylesheet" href="/Admin_Panel/dist/css/bootstrap-rtl.min.css">
    <!-- template rtl version -->
    <link rel="stylesheet" href="/Admin_Panel/dist/css/custom-style.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="/forgotpassword"><b>فراموشی رمز عبور</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">ایمیل خود را وارد کنید  </p>

                <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                    <div style="color: darkred;" asp-validation-summary="ModelOnly"></div>

                    <div class="input-group mb-3">
                        <input type="text" asp-for="Email" class="form-control" placeholder=" ایمیل ">
                        <div class="input-group-append">
                            <span class="fa fa-envelope input-group-text"></span>
                        </div>
                        <span style="color:red" asp-validation-for="Email"></span>
                    </div>
               
                    <div class="row">
                     
                        <!-- /.col -->
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">ثبت</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

               

            
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <script src="/Admin_Panel/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="/Admin_Panel/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/Admin_Panel/dist/js/adminlte.js"></script>

    <!-- OPTIONAL SCRIPTS -->
    <script src="/Admin_Panel/dist/js/demo.js"></script>

    <!-- PAGE PLUGINS -->
    <!-- SparkLine -->
    <script src="/Admin_Panel/plugins/sparkline/jquery.sparkline.min.js"></script>
    <!-- jVectorMap -->
    <script src="/Admin_Panel/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="/Admin_Panel/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <!-- SlimScroll 1.3.0 -->
    <script src="/Admin_Panel/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- ChartJS 1.0.2 -->
    <script src="/Admin_Panel/plugins/chartjs-old/Chart.min.js"></script>

    <!-- PAGE SCRIPTS -->
    <script src="/Admin_Panel/dist/js/pages/dashboard2.js"></script>
    <script>$(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            })
        })</script>
</body>
</html>

