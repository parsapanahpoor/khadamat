@model Models.Entities.User.Location
@{
    ViewData["Title"] = "افزودن آدرس ";
    Layout = "~/Areas/Users/Views/Shared/_TestLayout.cshtml";
}
<div class="content-wrapper" style="min-height: 805px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>افزودن آدرس جدید</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/User">خانه</a></li>
                        <li class="breadcrumb-item active">افزودن آدرس جدید </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <form asp-action="CreateLocation" asp-controller="Account" asp-area="Users" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="UserID" value="@ViewBag.Userid"/>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">اطلاعات آدرس  جدید   </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div role="form" asp-action="Create" asp-controller="Users" asp-area="Admin">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> کدپستی  </label>
                                        <input type="text" asp-for="PostalCode" class="form-control" id="exampleInputEmail1" placeholder="کدپستی را وارد کنید">
                                        <span asp-validation-for="PostalCode" class="text-danger"></span>

                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> آدرس و نشانی   </label>
                                        <input type="text" asp-for="LocationAddress" class="form-control" id="exampleInputEmail1" placeholder="آدرس و نشانی را وارد کنید">
                                        <span asp-validation-for="LocationAddress" class="text-danger"></span>

                                    </div>

                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" class="btn btn-success">ثبت </button>
                                    <a href="/Users/Account/LocationList" class="btn btn-primary">بازگشت  </a>
                                </div>
                            </div>
                        </div>


                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
    </form>


</div>

