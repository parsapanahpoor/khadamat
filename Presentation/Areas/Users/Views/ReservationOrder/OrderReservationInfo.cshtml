@model Models.Entities.EmployeeReservation.ReservationOrder
@{
    ViewData["Title"] = "اطلاعلات ";
    Layout = "~/Areas/Users/Views/Shared/_TestLayout.cshtml";

    Models.Entities.User.User Employee = ViewBag.EmployeeInfo as Models.Entities.User.User;
}

<div class="content-wrapper" style="min-height: 805px;">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>  اطلاعات خدمت   </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Users">خانه</a></li>
                        <li class="breadcrumb-item active">اطلاعات خدمت </li>
                    </ol>
                </div>
            </div>
        </div>
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-7">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">اطلاعات کاربری  </h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <div role="form" asp-action="Create" asp-controller="Users" asp-area="Admin">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1"> نام خدمت رسان </label>
                                    <input type="text" asp-for="@Employee.UserName" readonly class="form-control" id="exampleInputEmail1" placeholder="نام کاربری  را وارد کنید">

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1"> شماره موبایل خدمت رسان  </label>
                                    <input type="text" asp-for="@Employee.PhoneNumber" readonly class="form-control" id="exampleInputEmail1" placeholder="نام کاربری  را وارد کنید">

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1"> ایمیل خدمت رسان  </label>
                                    <input type="text" asp-for="@Employee.Email" readonly class="form-control" id="exampleInputEmail1" placeholder="نام کاربری  را وارد کنید">

                                </div>

                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">

                           
                                    <a asp-action="Index" asp-controller="Users" asp-area="Admin" class="btn btn-primary">بازگشت</a>




                            </div>
                        </div>
                    </div>


                </div>


                <div class="col-md-5">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">  تصویر خدمت دهنده   </h3>
                        </div>

                        <div class="form-horizontal">
                            <div class="card-body row">
                                <img style="margin:auto; width:342px" id="imgAvatar" class="img-responsive rounded" src="~/Images/UserAvatar/@Employee.UserAvatar" alt="upload_img">
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                   

                                </div>
                            </div>

                        </div>
                    </div>



                </div>


            </div>
        </div><!-- /.container-fluid -->
    </section>






</div>
