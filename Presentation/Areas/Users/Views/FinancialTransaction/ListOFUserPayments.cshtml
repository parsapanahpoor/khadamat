@model List<Models.Entities.Factor.FinancialTrnsaction>
@{
    ViewData["Title"] = "لیست تراکنش های " + User.Identity.Name;
    Layout = "~/Areas/Users/Views/Shared/_TestLayout.cshtml";
}


@section Styls
    {

    <!-- DataTables -->
    <link rel="stylesheet" href="/Admin_Panel/plugins/datatables/dataTables.bootstrap4.css">

}


<div class="content-wrapper" style="min-height: 805px;">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1> لیست تراکنش ها  </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/User">خانه</a></li>
                        <li class="breadcrumb-item active">لیست تراکنش ها </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="row">
            <div class="col-12">


                <div class="card ">
                    <div class="card-header">
                        <div class="card-tools">
                           
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div id="example1_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                            <div class="col-sm-12">
                                <table id="example1" class="table table-bordered table-striped dataTable" role="grid">
                                    <thead>
                                        <tr role="row">

                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="وضعیت: activate to sort column ascending"> شناسه ی تراکنش  </th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="وضعیت: activate to sort column ascending">مبلغ تراکنش </th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="وضعیت: activate to sort column ascending"> تاریخ تراکنش  </th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="وضعیت: activate to sort column ascending">  روش پرداخت   </th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="وضعیت: activate to sort column ascending">   شناسه ی بانکی    </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr role="row" class="odd">

                                                <td>
                                                    <div class="badge badge-primary">
                                                        @item.FinancialTransactionID
                                                    </div>
                                                </td>

                                                <td>
                                                    <div class="badge badge-success">
                                                        @item.Price.ToString("#,0") ریال
                                                    </div>
                                                </td>

                                                <td>
                                                    <div class="badge badge-primary">
                                                        @item.DateTime.ToString("yyyy/MM/dd")
                                                    </div>
                                                </td>

                                                @if (item.FinancialTransactionStatusID == 1)
                                                {
                                                    <td>
                                                        <div class="badge badge-warning">
                                                            پرداخت آنلاین
                                                        </div>
                                                    </td>
                                                }
                                                @if (item.FinancialTransactionStatusID == 2)
                                                {
                                                    <td>
                                                        <div class="badge badge-warning">
                                                            پرداخت نقدی
                                                        </div>
                                                    </td>
                                                }

                                                @if (item.FinancialTransactionStatusID == 1)
                                                {
                                                    <td>
                                                        <div class="badge badge-primary">
                                                            @item.BankRecepiet
                                                        </div>
                                                    </td>
                                                }
                                                @if (item.FinancialTransactionStatusID == 2)
                                                {
                                                    <td>
                                                        <div class="badge badge-dark">
                                                            شناسه ندارد
                                                        </div>
                                                    </td>
                                                }

                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section> <!-- /.content -->
</div>




@section scripts{
    <!-- ./wrapper -->

    <script src="/Admin_Panel/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/Admin_Panel/plugins/datatables/dataTables.bootstrap4.js"></script>
    <!-- SlimScroll -->
    <!-- FastClick -->
    <script src="/Admin_Panel/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <!-- AdminLTE for demo purposes -->
    <!-- page script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    }
                },
                "info": false,
            });
            $('#example2').DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    }
                },
                "info": false,
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "autoWidth": false
            });
        });</script>
}


