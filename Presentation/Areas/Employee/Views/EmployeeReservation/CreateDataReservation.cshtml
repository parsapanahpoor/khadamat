@{
    Layout = "~/Areas/Employee/Views/Shared/_TestLayout.cshtml";
    ViewData["Title"] = "افزودن  تاریخ";}

<div class="content-wrapper" style="min-height: 805px;">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1> افزودن  تاریخ </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Employee">خانه</a></li>
                        <li class="breadcrumb-item active">افزودن  تاریخ </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <form asp-action="CreateDataReservation" asp-controller="EmployeeReservation" asp-area="Employee" method="post" enctype="multipart/form-data">

                <div class="row">
                </div>
                <div class="col-md-12">
                    <!-- Horizontal Form -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">  ثبت تاریخ  </h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <div class="form-horizontal">
                            <div class="card-body row">
                                <div class="card-body col-md-10">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">   تاریخ       </label>
                                        <input type="text" class="form-control" name="ReservationDateTimeString" id="ReservationDateTimeString" placeholder="تاریخ  را وارد کنید">
                                    </div>

                                </div>

                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-success">ثبت </button>
                                <a href="/Employee/EmployeeReservation/ListOfEmployeeDateReservations" class="btn btn-primary">بازگشت </a>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </section>

</div>



@section Scripts
{


    <link href="https://cdn.kendostatic.com/2013.2.918/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="https://cdn.kendostatic.com/2013.2.918/styles/kendo.default.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="~/js/kendo.all.min.js"></script>


    <script>
        $(document).ready(function () {

            // create DatePicker from input HTML element
            $("#ReservationDateTimeString").kendoDatePicker();

        });
    </script>


}