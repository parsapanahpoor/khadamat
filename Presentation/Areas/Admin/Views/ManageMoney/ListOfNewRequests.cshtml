@model List<Models.Entities.Factor.RequestForCheckout>
@{
    ViewData["Title"] = "لیست تسویه حساب ها ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section Styls
    {

    <!-- DataTables -->
    <link rel="stylesheet" href="/Admin_Panel/plugins/datatables/dataTables.bootstrap4.css">

}


<div class="content-wrapper" style="min-height: 805px;">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1> تاریخچه ی تسویه </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Admin ">خانه</a></li>
                        <li class="breadcrumb-item active">تاریخچه ی تسویه </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card ">
                    <div class="card-header">
                        <div class="card-tools">

                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div id="example1_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                            <div class="col-sm-12">
                                <table id="example1" class="table table-bordered table-striped dataTable" role="grid">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width:10px;" aria-label="عکس  : activate to sort column ascending">عکس  </th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="نام کاربری  : activate to sort column descending">     مبلغ درخواستی  </th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="موبایل : activate to sort column ascending">شماره کارت  </th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="وضعیت: activate to sort column ascending">صاحب کارت</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="وضعیت: activate to sort column ascending"> تاریخ درخواست </th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="وضعیت: activate to sort column ascending">  وضعیت  </th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="وضعیت: activate to sort column ascending">    </th>

                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                        <tr role="row" class="odd">
                                            <td class="sorting_1">
                                                <img class="direct-chat-img" style="width:50px;height:50px;" src="/Images/UserAvatar/@item.User.UserAvatar" alt="message user image">
                                            </td>
                                            <td>
                                                <div class="badge badge-success">
                                                    @item.Price.ToString("#,0")
                                                </div>
                                            </td>

                                            <td>
                                                <div class="badge badge-primary">
                                                    @item.CartBankNumber
                                                </div>
                                            </td>

                                            <td>
                                                <div class="badge badge-primary">
                                                    @item.OwnerBankCart
                                                </div>
                                            </td>

                                            <td>
                                                <div class="badge badge-warning">
                                                    @item.DateTime.ToString("yyyy/MM/dd")
                                                </div>
                                            </td>
                                            @if (item.RequestForCheckoutStatusID == 1)
                                            {
                                                <td>
                                                    <div class="badge badge-primary">
                                                        در حال برسی
                                                    </div>
                                                </td>
                                            }
                                            @if (item.RequestForCheckoutStatusID == 2)
                                            {
                                                <td>
                                                    <div class="badge badge-success">
                                                        پرداخت شده
                                                    </div>
                                                </td>
                                            }
                                            @if (item.RequestForCheckoutStatusID == 3)
                                            {
                                                <td>
                                                    <div class="badge badge-primary">
                                                        تایید نشده
                                                    </div>
                                                </td>
                                            }
                                            @if (item.RequestForCheckoutStatusID == 1)
                                            {
                                                <td>
                                                    <a class="btn btn-outline-success" href="/Admin/ManageMoney/ManageRequest/@item.RequestForCheckoutID">
                                                         برسی 
                                                    </a>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <a class="btn btn-outline-dark">
                                                         برسی شده  
                                                    </a>
                                                </td>
                                            }

                                        </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>




@section scripts{
    <!-- ./wrapper -->

    <script src="/Admin_Panel/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/Admin_Panel/plugins/datatables/dataTables.bootstrap4.js"></script>
    <!-- SlimScroll -->
    <!-- FastClick -->
    <script src="/Admin_Panel/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <!-- AdminLTE for demo purposes -->
    <!-- page script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    }
                },
                "info": false,
            });
            $('#example2').DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    }
                },
                "info": false,
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "autoWidth": false
            });
        });</script>
}


